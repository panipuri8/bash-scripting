echo "Enter the two numbers "
read a b
echo "Enter the operator "
read c
case "$c" in
 "+") c=`expr $a + $b`
      echo "Sum of the two numbers is $c"
 ;;
 "-") c=`expr $a - $b`
      echo "Difference of the two numbers is $c"
 ;;
 "*") c=`expr $a \* $b`
      echo "Product of the two numbers is $c"
 ;;
 "/") c=`expr $a / $b`
      echo "Quotient of the two numbers is $c"
 ;;
 "%") c=`expr $a % $b`
      echo "Remainder of the two numbers is $c"
 ;;
esac
